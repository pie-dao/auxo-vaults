{
  "extends": "solhint:recommended",
  "rules": {
    "compiler-version": ["warn", "^0.8.0"],
    "prettier/prettier": "error",
    "avoid-throw": false,
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "reason-string": [
      "warn", {
        "maxLength":100
      }
    ]    
  },
  "plugins": ["prettier"]
}